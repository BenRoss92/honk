<div class="container">
  <h2>Shout your Honk</h2>
  <form action="/honks" method="post">
    <div class="form-group">
      <label for="message">Message:</label>
      <textarea class="form-control" name="message" rows="8"
      placeholder="Blurt out your feelings here..."></textarea>
    </div>
    <div>
      <button type="submit" class="btn btn-default" name="honk">Honk!</button>
    </div>
  </form>
</div>
